<div class="login-background">
  <%= flash[:message] %>
  <div class="login">
    <div class="image">
    </div>
    <%= form_for @user do |user| %>
      <div class="path">
        <div>
          <span class="material-icons" id="login-icon">face</span>
          <h3>Sign up!</h3>
        </div>
        <div>
          <span class="material-icons">person</span>
          <%= user.text_field :username, placeholder:"Username", class:"username-field"%>
        </div>
        <div>
          <span class="material-icons">create</span>
          <%= user.text_field :fullname, placeholder:"Full name", class:"username-field"%>
        </div>
        <div>
          <%= user.file_field :photo %>
        </div>
        <div>
          <%= user.file_field :photo %>
        </div>
        <%= user.submit "Sign up", class:'btn' %>
      </div>
    <% end %>
  </div>
</div>