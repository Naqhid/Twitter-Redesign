<div class="login-background">
  <%= flash[:message] %>
  <div class="login">
    <div class="image">
    </div>
    <%= form_for :session, url:login_path do |f| %>
      <div class="path">
        <div>
          <span class="material-icons" id="login-icon">face</span>
          <h3>Login to your account</h3>
        </div>
        <div>
          <span class="material-icons">person</span>
          <%= f.text_field :username, placeholder:"Username", class:"username-field"%>
        </div>
        <%= f.submit "Login", class:'btn' %>
      </div>
    <% end %>
  </div>
</div>